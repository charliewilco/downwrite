    "printWidth": 85,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@lib/(.*)$": "<rootDir>/src/lib/$1",
      "^@reducers/(.*)$": "<rootDir>/src/reducers/$1"
