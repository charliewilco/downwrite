{
  "private": true,
  "name": "downwrite",
  "description": "A place to write",
  "author": "Charles âš¡ <charlespeters42@gmail.com>",
  "repository": "charlespeters/downwrite",
  "license": "MIT",
  "scripts": {
    "_start": "micro-proxy -r rules.dev.json -p 3000",
    "_dev": "yarn workspaces run dev",
    "test": "jest",
    "lint": "tslint",
    "ws:api": "yarn workspace api",
    "ws:www": "yarn workspace client",
    "api:dev": "yarn workspace api dev",
    "client:dev": "yarn workspace client dev"
  },
  "devDependencies": {
    "husky": "^3.0.4",
    "jest": "^24.6.0",
    "lint-staged": "^10.2.9",
    "micro-proxy": "^1.1.0",
    "prettier": "^1.17.0",
    "tslint": "^5.14.0",
    "typescript": "^3.4.1"
  },
  "jest": {
    "projects": [
      "client",
      "api"
    ]
  },
  "prettier": {
    "printWidth": 85,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --parser postcss --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "client",
    "api"
  ]
}
