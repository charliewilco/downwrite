  "scripts": {
    "start": "next start",
    "build": "next build",
    "build:analyze": "ANALYZE=true yarn build",
    "dev": "next",
    "prebuild": "yarn generate",
    "predev": "yarn generate",
    "generate": "graphql-codegen",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --no-cache",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^3.2.9",
    "@next/bundle-analyzer": "^10.0.3",
    "@reach/checkbox": "^0.12.1",
    "@reach/combobox": "^0.12.1",
    "@reach/dialog": "^0.12.1",
    "@reach/menu-button": "^0.12.1",
    "@reach/skip-nav": "^0.12.1",
    "@reach/tabs": "^0.12.1",
    "@reach/visually-hidden": "^0.12.1",
    "@sindresorhus/is": "^4.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/draft-js": "^0.10.44",
    "@types/file-saver": "^2.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.10.1",
    "@types/node": "^14.6.2",
    "@types/prismjs": "^1.9.1",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.9",
    "apollo-server-micro": "^2.19.0",
    "bcrypt": "^5.0.0",
    "date-fns": "^2.2.1",
    "draft-js": "^0.11.7",
    "file-saver": "^2.0.0",
    "formik": "^2.2.5",
    "framer-motion": "^2.9.4",
    "graphql": "^15.3.0",
    "immer": "^8.0.0",
    "immutable": "~3.8.2",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^3.1.2",
    "mongoose": "^5.10.16",
    "next": "^10.0.3",
    "prismjs": "^1.15.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.4",
    "react-icons": "^4.1.0",
    "react-markdown": "^5.0.3",
    "react-prism": "^4.3.1",
    "remarkable": "^2.0.1",
    "source-serif-pro": "^3.1.0",
    "typeface-inter": "^3.15.0",
    "typeface-jetbrains-mono": "^2.0.0",
    "universal-cookie": "^4.0.2",
    "uuid": "^8.3.0",
    "yup": "^0.31.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.19.3",
    "@graphql-codegen/typescript": "^1.18.1",
    "@graphql-codegen/typescript-operations": "^1.17.12",
    "@graphql-codegen/typescript-react-apollo": "^2.2.1",
    "@graphql-codegen/typescript-resolvers": "^1.17.12",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "@types/jest": "^26.0.15",
    "@types/react-test-renderer": "^17.0.0",
    "apollo-server-testing": "^2.19.0",
    "autoprefixer": "^10.0.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "postcss": "^8.1.10",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "react-test-renderer": "^17.0.1",
    "tailwindcss": "^2.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@lib/(.*)$": "<rootDir>/src/lib/$1",
      "^@reducers/(.*)$": "<rootDir>/src/reducers/$1"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "jsx": "react"
        }
      }
    }
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "prettier": {
    "printWidth": 85,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --parser postcss --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": "12.x"
  }
}
