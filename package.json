{
  "private": true,
  "name": "downwrite",
  "description": "A place to write",
  "author": "Charles âš¡ <charlespeters42@gmail.com>",
  "repository": "charlespeters/downwrite",
  "scripts": {
    "dev": "yarn workspaces run dev",
    "build": "yarn workspaces run build",
    "go": "yarn workspaces run deploy",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "husky": "^1.0.1",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "typescript": "^3.0.3"
  },
  "prettier": {
    "printWidth": 85,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --parser postcss --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "client",
    "api",
    "integration"
  ],
  "license": "MIT"
}
