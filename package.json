{
  "name": "@downwrite/client",
  "version": "0.1.0",
  "private": true,
  "repository": "charliewilco/downwrite",
  "author": "Charlie âš¡ <charlespeters42@gmail.com>",
  "scripts": {
    "start": "next start -p $PORT",
    "build": "next build",
    "dev": "next dev",
    "test": "jest --runInBand",
    "build:analyze": "ANALYZE=true yarn build",
    "dev:inspect": "NODE_OPTIONS='--inspect' next dev",
    "test:ci": "jest --ci --runInBand --no-cache",
    "test:e2e": "jest --ci --runInBand --config jest.e2e.config.js",
    "test:mega": "yarn typecheck && yarn build && yarn test:ci && yarn test:e2e",
    "_commit": "cz",
    "prepare": "husky install",
    "prebuild": "yarn generate",
    "predev": "yarn generate",
    "generate": "graphql-codegen",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^3.3.19",
    "@next/bundle-analyzer": "^10.2.2",
    "@reach/checkbox": "^0.16.0",
    "@reach/combobox": "^0.16.1",
    "@reach/dialog": "^0.16.0",
    "@reach/menu-button": "^0.16.1",
    "@reach/skip-nav": "^0.16.0",
    "@reach/tabs": "^0.16.1",
    "@reach/visually-hidden": "^0.16.0",
    "@sindresorhus/is": "^4.0.1",
    "apollo-server-micro": "^2.24.1",
    "base-64": "^1.0.0",
    "date-fns": "^2.21.3",
    "draft-js": "^0.11.7",
    "draftjs-md-converter": "^1.5.1",
    "fathom-client": "^3.0.0",
    "file-saver": "^2.0.5",
    "formik": "^2.2.7",
    "framer-motion": "^4.1.17",
    "graphql": "^15.5.0",
    "immer": "^9.0.2",
    "immutable": "~3.8.2",
    "jwt-decode": "^3.1.2",
    "next": "^11.1.2",
    "pos-tagger.js": "^1.0.8",
    "prismjs": "^1.23.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.2",
    "react-icons": "^4.2.0",
    "react-markdown": "^6.0.2",
    "source-serif-pro": "^3.1.0",
    "typeface-dm-mono": "^1.1.13",
    "typeface-inter": "^3.18.1",
    "universal-cookie": "^4.0.4",
    "uuid": "^8.3.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-operations": "^2.1.4",
    "@graphql-codegen/typescript-react-apollo": "^3.1.4",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/typography": "^0.4.0",
    "@types/base-64": "^1.0.0",
    "@types/draft-js": "^0.11.5",
    "@types/expect-puppeteer": "^4.4.7",
    "@types/file-saver": "^2.0.3",
    "@types/jest": "^27.0.2",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/node": "^16.9.4",
    "@types/prismjs": "^1.16.6",
    "@types/puppeteer": "^5.4.4",
    "@types/react": "^17.0.22",
    "@types/react-dom": "^17.0.9",
    "@types/react-test-renderer": "^17.0.1",
    "@types/uuid": "^8.3.1",
    "@types/yup": "^0.29.13",
    "apollo-server-testing": "^2.24.1",
    "autoprefixer": "^10.2.5",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^6.0.0",
    "jest": "^27.2.1",
    "jest-puppeteer": "^5.0.3",
    "jest-transform-graphql": "^2.1.0",
    "merge": "^2.1.1",
    "postcss": "^8.3.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "prop-types": "^15.7.2",
    "puppeteer": "^10.2.0",
    "react-test-renderer": "^17.0.2",
    "tailwindcss": "^2.2.15",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.[jt]sx?$",
    "moduleNameMapper": {
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@lib/(.*)$": "<rootDir>/src/lib/$1",
      "^@reducers/(.*)$": "<rootDir>/src/reducers/$1"
    },
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "jsx": "react"
        }
      }
    }
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ],
  "prettier": {
    "printWidth": 85,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "engines": {
    "node": "14.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
