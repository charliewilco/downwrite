{
  "name": "@downwrite/client",
  "version": "0.1.0",
  "private": true,
  "repository": "charliewilco/downwrite",
  "author": "Charlie âš¡ <charlespeters42@gmail.com>",
  "scripts": {
    "start": "next start",
    "build": "next build",
    "build:analyze": "ANALYZE=true yarn build",
    "commit": "cz",
    "db:mock": "node scripts/fill",
    "db:clear": "node scripts/prep-db",
    "dev": "next dev",
    "prebuild": "yarn generate",
    "predev": "yarn generate",
    "generate": "graphql-codegen",
    "test": "jest --runInBand",
    "test:ci": "jest --ci --runInBand --no-cache",
    "test:e2e": "jest --ci --runInBand --config jest.e2e.config.js",
    "test:mega": "yarn typecheck && yarn db:clear && yarn build && yarn test:ci && yarn test:e2e",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@apollo/client": "^3.3.7",
    "@next/bundle-analyzer": "^10.0.5",
    "@reach/checkbox": "^0.12.1",
    "@reach/combobox": "^0.12.1",
    "@reach/dialog": "^0.12.1",
    "@reach/menu-button": "^0.12.1",
    "@reach/skip-nav": "^0.12.1",
    "@reach/tabs": "^0.12.1",
    "@reach/visually-hidden": "^0.12.0",
    "@sindresorhus/is": "^4.0.0",
    "@types/base-64": "^0.1.3",
    "@types/bcrypt": "^3.0.0",
    "@types/draft-js": "^0.10.44",
    "@types/file-saver": "^2.0.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.21",
    "@types/prismjs": "^1.16.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/uuid": "^8.3.0",
    "@types/yup": "^0.29.11",
    "apollo-server-micro": "^2.19.2",
    "base-64": "^1.0.0",
    "bcrypt": "^5.0.0",
    "date-fns": "^2.2.1",
    "draft-js": "^0.11.7",
    "draftjs-md-converter": "^1.4.2",
    "fathom-client": "^3.0.0",
    "file-saver": "^2.0.0",
    "formik": "^2.2.6",
    "framer-motion": "^3.1.1",
    "graphql": "^15.3.0",
    "immer": "^8.0.0",
    "immutable": "~3.8.2",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^3.1.2",
    "mongoose": "^5.10.16",
    "next": "^10.0.5",
    "prismjs": "^1.23.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.4",
    "react-icons": "^4.1.0",
    "react-markdown": "^5.0.3",
    "react-prism": "^4.3.1",
    "source-serif-pro": "^3.1.0",
    "typeface-inter": "^3.15.0",
    "typeface-jetbrains-mono": "^2.0.0",
    "universal-cookie": "^4.0.2",
    "uuid": "^8.3.0",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/typescript": "^1.19.0",
    "@graphql-codegen/typescript-operations": "^1.17.12",
    "@graphql-codegen/typescript-react-apollo": "^2.2.1",
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@tailwindcss/custom-forms": "^0.2.1",
    "@tailwindcss/typography": "^0.4.0",
    "@types/expect-puppeteer": "^4.4.5",
    "@types/jest": "^26.0.20",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/puppeteer": "^5.4.2",
    "@types/react-test-renderer": "^17.0.0",
    "apollo-server-testing": "^2.19.2",
    "autoprefixer": "^10.2.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-puppeteer": "^4.4.0",
    "jest-transform-graphql": "^2.1.0",
    "merge": "^2.1.0",
    "postcss": "^8.1.10",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "prop-types": "^15.7.2",
    "puppeteer": "^5.5.0",
    "react-test-renderer": "^17.0.1",
    "tailwindcss": "^2.0.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.[jt]sx?$",
    "moduleNameMapper": {
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@lib/(.*)$": "<rootDir>/src/lib/$1",
      "^@reducers/(.*)$": "<rootDir>/src/reducers/$1"
    },
    "transform": {
      "\\.(gql|graphql)$": "jest-transform-graphql"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": {
          "jsx": "react"
        }
      }
    }
  },
  "browserslist": [">0.25%", "not ie 11", "not op_mini all"],
  "prettier": {
    "printWidth": 85,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "engines": {
    "node": "12.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
