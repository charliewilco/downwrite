{
  "private": true,
  "name": "downwrite",
  "description": "A place to write",
  "author": "Charles âš¡ <charlespeters42@gmail.com>",
  "repository": "charlespeters/downwrite",
  "license": "MIT",
  "scripts": {
    "start": "micro-proxy -r rules.dev.json -p 5000",
    "dev": "yarn workspaces run dev",
    "build": "yarn workspaces run build",
    "test": "jest",
    "lint": "tslint",
    "ws:api": "yarn workspace api",
    "ws:www": "yarn workspace client"
  },
  "devDependencies": {
    "danger": "^7.0.2",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.0",
    "micro-proxy": "^1.1.0",
    "prettier": "^1.16.1",
    "tslint": "^5.14.0",
    "typescript": "^3.2.4"
  },
  "jest": {
    "projects": [
      "client",
      "api"
    ]
  },
  "prettier": {
    "printWidth": 85,
    "singleQuote": false,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": true
  },
  "lint-staged": {
    "*.{js,json,ts,tsx}": [
      "prettier --write",
      "git add"
    ],
    "*.css": [
      "prettier --parser postcss --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "client",
    "api",
    "integration"
  ]
}
