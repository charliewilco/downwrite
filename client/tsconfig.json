{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "lib": ["dom", "es2016"]
  },
  "exclude": ["__tests__", "server.js", "next.config.js"]
}
