{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "repository": "charlespeters/downwrite",
  "author": "Charles âš¡ <charlespeters42@gmail.com>",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "test": "NODE_ENV=test jest --env=jsdom --verbose --silent",
    "test:integration": "jest --config=./puppeteer.json",
    "deploy": "now && now alias"
  },
  "dependencies": {
    "@charliewilco/sanitize-object": "^1.0.1",
    "@mdx-js/mdx": "^0.15.5",
    "@mdx-js/tag": "^0.15.0",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-mdx": "^1.2.0",
    "@zeit/next-typescript": "^1.1.1",
    "babel-plugin-styled-components": "^1.8.0",
    "date-fns": "^1.29.0",
    "draft-js": "^0.10.4",
    "draft-js-markdown-plugin": "^3.0.5",
    "draft-js-plugins-editor": "^2.1.1",
    "draft-js-prism-plugin": "^0.1.3",
    "express": "^4.16.3",
    "file-saver": "^1.3.4",
    "front-matter": "^2.3.0",
    "http-proxy-middleware": "^0.19.0",
    "immutable": "^3.8.2",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "markdown-draft-js": "^1.0.1",
    "next": "^7.0.1",
    "next-manifest": "^1.5.0",
    "next-offline": "^3.0.2",
    "prismjs": "^1.15.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-dropzone": "^6.0.2",
    "react-markdown": "^4.0.1",
    "react-prism": "^4.3.1",
    "styled-components": "^3.4.9",
    "universal-cookie": "^3.0.4",
    "universal-cookie-express": "^3.0.4",
    "universal-fetch": "^1.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/draft-js": "^0.10.24",
    "@types/file-saver": "^1.3.0",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.116",
    "@types/next": "^7.0.1",
    "@types/prismjs": "^1.9.0",
    "@types/react": "^16.4.13",
    "@types/react-dom": "^16.0.8",
    "@types/react-dropzone": "^4.2.2",
    "@types/styled-components": "^3.0.1",
    "@types/uuid": "^3.4.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.0.1",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.0",
    "jest-fetch-mock": "^1.6.6",
    "jest-styled-components": "^6.2.1",
    "react-testing-library": "^5.1.0",
    "typescript": "^3.1.1"
  },
  "babel": {
    "presets": [
      "next/babel",
      "@zeit/next-typescript/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": false,
          "preprocess": false
        }
      ]
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "/**/*.{js,jsx,mjs}"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/config/setupTests.ts",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/",
      "<rootDir>/__tests__/config/"
    ],
    "testMatch": [
      "**/*.(test).(ts|tsx)"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__tests__/config/fileTransform.js"
    }
  },
  "now": {
    "name": "next-downwrite",
    "alias": [
      "beta.downwrite.us"
    ],
    "env": {
      "NODE_ENV": "production",
      "SECRET_KEY": "@dw-key"
    },
    "scale": {
      "sfo1": {
        "min": 1,
        "max": 2
      }
    }
  },
  "browserslist": [
    ">0.25%",
    "not ie 11",
    "not op_mini all"
  ]
}
