{
  "compilerOptions": {
    "typeRoots": ["types", "node_modules/@types", "../node_modules/@types"],
    "lib": ["es2016"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["types/*", "src/**/*"]
}
