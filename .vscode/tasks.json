{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TypeScript Errors",
      "type": "shell",
      "command": "./node_modules/.bin/tsc",
      "isBackground": true,
      "args": ["--watch", "--noEmit", "--project", "www"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "never",
        "echo": false,
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": "$tsc-watch"
    }
  ]
}
