{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "node",
      "micro",
      "hapi",
      "boom",
      "bcrypt",
      "joi",
      "uuid",
      "mongoose",
      "axios",
      "draft-js",
      "jest",
      "jsonwebtoken",
      "shot"
    ],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["types/*", "src/**/*"],
  "exclude": [
    "dist",
    "docs",
    "@types/react-native",
    "../node_modules/@types/react-native"
  ]
}
