{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["types/*", "src/**/*"],
  "exclude": ["dist", "docs"]
}
